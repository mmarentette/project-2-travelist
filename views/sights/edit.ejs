<%- include('../partials/header') %>

<h1><%= destination.city %>, <%= destination.country %></h1>
<h3>Edit sight</h3>
<form action="/destinations/<%= destination._id %>" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control" value="<%= sight.name %>">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" class="form-control" rows="4"><%= sight.description %></textarea>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" name="address" class="form-control" value="<%= sight.address %>">
    </div>
    <div class="form-group">
        <label for="photo">Photo</label>
        <input type="text" name="photo" class="form-control" value="<%= sight.photo %>">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<%- include('../partials/footer') %>